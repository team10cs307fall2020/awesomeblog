
<h1>User List</h1>
<%= link_to 'Sign-up', users_signup_path %>
<%= link_to 'login', login_path %>
<table>
  <tr>
    <th>Email</th>
    <th>Username</th>
    <th>Password</th>
  </tr>

  <% @user.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.username %></td>
      <td><%= user.password %>
      <td><%= link_to 'Show', user_path(user) %></td>
      <td><%= link_to 'Destroy', user_path(user),
                      method: :delete,
                      data: { confirm: 'Are you sure about that?' } %></td>
    </tr>
  <% end %>
</table>