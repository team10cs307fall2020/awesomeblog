<h1>Editing Profile</h1>
<%= form_for :profile, url: user_profile_path(@profile), method: :patch do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited
        this article from being saved:</h2>
      <ul>
        <% @profile.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <p>
    <%= f.label :Name %><br>
    <%= @profile.Name %>
  </p>

  <p>
    <%= f.label :Email %><br>
    <%= @profile.Email %>
  </p>

  <p>
    <%= f.label :Phone %><br>
    <%= f.telephone_field :Phone %>
  </p>

  <p>
    <%= f.label :Gender %><br>
    <%= f.select :gender, %w{ Female Male Secret}, :include_blank => "Blank" %>
  <p>
  <p>
    <%= f.label :Bio %><br>
    <%= f.text_area :Bio %>
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', user_profile_path(@profile) %>