<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :commenter %><br>
    <%= f.text_field :commenter %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>

  <% if Topic.exists?(title: @post.topic) %>
    <p>Shared Topic Discovered</p>
  <% else %>
    <p>Creating a New Topic Here</p>

  <% end %>

<% end %>