<% @temp = Topic.where(:title => @post.topic) %>
<p>
  <strong>Topic:</strong>
  <%= link_to @post.topic, topic_path(@temp.pluck(:id)[0]) %>
</p>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
</p>
<p>
  <%= raw Rinku.auto_link(@post.text, mode = :all)%>
</p>

<p>
  <strong>Posted by:</strong>

  <% if @post.anonymous == 1 %>
  <td>Anonymous</td>
<% else @user = User.find_by(username: @post.author)%>
  <% if current_user.username == @user.username %>
    <td> Yourself </td>
  <% else %>
    <td><%= link_to @user.username, view_user_path(@user)%></td>
  <% end %>
<% end %>
</p>

<h2>Comments</h2>
<% @post.comments.each do |comment| %>
  <p>
    <strong>Commenter:</strong>
    <%= comment.commenter %>
  </p>

  <p>
    <strong>Comment:</strong>
    <%= comment.body %>
  </p>
<% end %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

